generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  CURATOR
  MODERATOR
  ADMIN
}

model User {
  id        String      @id @default(cuid())
  name      String?
  email     String      @unique
  username  String      @unique
  password  String
  role      Role        @default(USER)
  isBanned  Boolean     @default(false)
  banReason String?
  
  // Verification System
  isVerified      Boolean  @default(false)
  verificationType String?  // e.g., "verified", "premium", "notable"
  
  createdAt DateTime    @default(now())
  updatedAt DateTime    @default(now()) @updatedAt
  deletedAt DateTime?
  
  profile   Profile?
  moodBlocks MoodBlock[]
  auditLogs  AuditLog[]  @relation("AdminActions")

  @@index([username])
}

model Profile {
  id              String  @id @default(cuid())
  userId          String  @unique
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme           String  @default("dark")
  backgroundColor String? @default("#050505")
  primaryColor    String? @default("#ffffff")
  fontStyle       String? @default("sans")
  backgroundImage String?
  
  // Personalização Dinâmica
  customCursor    String?   @default("auto")
  mouseTrails     String?   @default("none")
  backgroundEffect String?  @default("none")
  customFont       String?  @default("Inter")
  staticTexture    String?  @default("none")
  avatarUrl        String?  @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now()) @updatedAt
  deletedAt       DateTime?
  
  // Relações
  analytics       ProfileAnalytics?
  versions        ProfileVersion[]
}

model ProfileVersion {
  id          String   @id @default(cuid())
  profileId   String
  profile     Profile  @relation(fields: [profileId], references: [id], onDelete: Cascade)
  
  blocks      Json     // Snapshot completo dos blocos (array de MoodBlock serializado)
  profileData Json?    // Snapshot das configs visuais (tema, cores, efeitos) para rollback completo
  
  isActive    Boolean  @default(false)
  label       String?  // Ex: "v3", "com foto nova", nome de template
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([profileId])
  @@index([profileId, isActive])
}

model MoodBlock {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // text, ticker, subtitle, etc.
  content   Json
  order     Int      @default(0)
  
  // Canvas positioning
  x         Float    @default(0)
  y         Float    @default(0)
  width     Int?
  height    Int?
  zIndex    Int      @default(1)
  rotation  Float    @default(0)
  
  messages  GuestbookMessage[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  deletedAt DateTime?
  
  @@index([userId])
  @@index([userId, type])
}

model GuestbookMessage {
  id        String   @id @default(cuid())
  content   String
  author    String   // Nome real ou anônimo gerado
  isAdmin   Boolean  @default(false)
  
  blockId   String
  block     MoodBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  userId    String?  // Opcional: link com usuário logado
  
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt

  @@index([blockId])
}

model ProfileAnalytics {
  id          String    @id @default(cuid())
  profileId   String    @unique
  profile     Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  views       Int       @default(0)
  lastViewAt  DateTime?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt

  @@index([profileId])
}

model FeatureFlag {
  id          String   @id @default(cuid())
  key         String   @unique
  name        String
  description String?
  isEnabled   Boolean  @default(true)
  isPremium   Boolean  @default(false)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt
}

model AuditLog {
  id        String   @id @default(cuid())
  adminId   String
  admin     User     @relation("AdminActions", fields: [adminId], references: [id])
  
  action    String   // DELETE_BLOCK, BAN_USER, VERIFY_USER, SYNC_FLAGS, etc.
  targetId  String?  // ID do recurso afetado
  targetType String? // User, MoodBlock, System
  
  reason    String?  @db.Text
  metadata  Json?    // Contexto extra (ex: conteúdo do bloco deletado)
  
  createdAt DateTime @default(now())

  @@index([adminId])
  @@index([action])
  @@index([targetId])
}
