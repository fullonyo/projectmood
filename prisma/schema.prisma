generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(cuid())
  name      String?
  email     String      @unique
  username  String      @unique
  password  String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  profile   Profile?
  moodBlocks MoodBlock[]

  @@index([username])
}

model Profile {
  id              String  @id @default(cuid())
  userId          String  @unique
  user            User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  theme           String  @default("light")
  backgroundColor String? @default("#ffffff")
  primaryColor    String? @default("#000000")
  fontStyle       String? @default("sans")
  backgroundImage String?
  updatedAt       DateTime @default(now()) @updatedAt
  
  analytics       ProfileAnalytics?
}

model MoodBlock {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type      String   // text, ticker, subtitle, floating, gif, video, social, guestbook, tape, doodle, weather, media, music, quote, photo, moodStatus, countdown
  content   Json
  order     Int      @default(0)
  
  // Canvas positioning
  x         Int      @default(0)
  y         Int      @default(0)
  width     Int?
  height    Int?
  zIndex    Int      @default(1)
  rotation  Float    @default(0)
  
  messages  GuestbookMessage[]
  updatedAt DateTime @default(now()) @updatedAt
  
  @@index([userId])
  @@index([userId, type])
}

model GuestbookMessage {
  id        String   @id @default(cuid())
  content   String
  author    String   // Nome real ou anônimo gerado
  isAdmin   Boolean  @default(false)
  
  blockId   String
  block     MoodBlock @relation(fields: [blockId], references: [id], onDelete: Cascade)
  
  userId    String?  // Opcional: link com usuário logado
  createdAt DateTime @default(now())
  
  @@index([blockId])
}

model ProfileAnalytics {
  id          String    @id @default(cuid())
  profileId   String    @unique
  profile     Profile   @relation(fields: [profileId], references: [id], onDelete: Cascade)
  views       Int       @default(0)
  lastViewAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([profileId])
}
